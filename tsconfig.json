    "compilerOptions": {
        "target": "ES2021",
        "module": "ES2015",
        "moduleResolution": "node",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "outDir": "lib",
        "declaration": true,
        "sourceMap": true,
        "resolveJsonModule": true
    },
    "include": ["src", "examples"]
}
