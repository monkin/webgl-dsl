{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/*", "examples/*"]
    },
    "noImplicitAny": true,
    "outDir": "lib",
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src", "examples"]
}
