{
  "name": "webgl-dsl",
  "displayName": "WebGL DSL",
  "description": "Thin functional WebGL wrapper with strong typed GLSL DSL",
  "version": "0.1.6",
  "author": {
    "name": "Andrei Monkin",
    "email": "monkin.andrey@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/monkin/webgl-dsl",
  "keywords": [
    "WebGL",
    "GLSL",
    "DSL"
  ],
  "type": "module",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    }
  },
  "files": [
    "lib/"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "targets": {
    "module": false,
    "types": false
  },
  "scripts": {
    "start": "npm run build:examples && vite",
    "docs": "typedoc --out docs src",
    "build": "npm run clean && npm run build:lib && npm run build:examples",
    "build:examples": "vite build && pug --pretty index.pug -o examples/build",
    "build:lib": "tsc --project tsconfig.lib.json",
    "clean": "rm -rf lib docs examples/build",
    "test": "jest"
  },
  "dependencies": {},
  "devDependencies": {
    "vite": "7.1.5",
    "typedoc": "0.28.12",
    "eslint": "9.35.0",
    "prettier": "3.6.2",
    "jstransformer-markdown-it": "3.0.0",
    "milligram": "1.4.1",
    "pug-cli": "1.0.0-alpha6",
    "@types/jest": "29.5.12",
    "@types/jest-image-snapshot": "6.4.0",
    "jest-image-snapshot": "6.5.1",
    "jest": "29.7.0",
    "ts-jest": "29.4.1",
    "ts-node": "10.9.2",
    "@types/gl": "6.0.5",
    "gl": "8.1.6",
    "@types/upng-js": "2.1.5",
    "upng-js": "2.1.0",
    "typescript": "5.9.2"
  }
}
