{
  "name": "webgl-dsl",
  "author": {
    "name": "Andrei Monkin",
    "email": "monkin.andrey@gmail.com"
  },
  "scripts": {
    "start": "parcel --out-dir examples/build examples/*.html",
    "build": "npm run clean && tsc --project tsconfig.lib.json && parcel build --public-url ./ --out-dir examples/build examples/*.html && npm run readme-to-index",
    "clean": "rm -rf lib examples/build",
    "readme-to-index": "cat readme.md | ghmd --template index.pug --stdin > index.html",
    "test": "jest"
  },
  "dependencies": {},
  "devDependencies": {
    "typescript": "4.0.5",
    "jest": "26.6.1",
    "@types/jest": "26.0.15",
    "ts-jest": "26.4.3",
    "parcel-bundler": "1.12.4",
    "github-markdown": "3.2.0",
    "milligram": "1.4.1"
  }
}
